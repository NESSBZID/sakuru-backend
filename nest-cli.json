{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api/src",
  "monorepo": true,
  "root": "apps/api",
  "generateOptions": {
    "spec": {
      "class": false,
      "controller": false,
      "decorator": false,
      "filter": false,
      "gateway": false,
      "guard": false,
      "interceptor": false,
      "middleware": false,
      "module": false,
      "pipe": false,
      "provider": false,
      "resolver": false,
      "service": false,
      "s": false,
      "co": false,
      "d": false,
      "f": false,
      "gu": false,
      "mo": false,
      "mi": false,
      "in": false,
      "pi": false,
      "pr": false,
      "r": false
    }
  },
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/monorepo-test/tsconfig.app.json"
  },
  "projects": {
    "api": {
      "type": "application",
      "root": "apps/api",
      "entryFile": "main",
      "sourceRoot": "apps/api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api/tsconfig.app.json"
      }
    },
    "statistics": {
      "type": "application",
      "root": "apps/statistics",
      "entryFile": "main",
      "sourceRoot": "apps/statistics/src",
      "compilerOptions": {
        "tsConfigPath": "apps/statistics/tsconfig.app.json"
      }
    },
    "avatars": {
      "type": "application",
      "root": "apps/avatars",
      "entryFile": "main",
      "sourceRoot": "apps/avatars/src",
      "compilerOptions": {
        "tsConfigPath": "apps/avatars/tsconfig.app.json"
      }
    },
    "twitch": {
      "type": "application",
      "root": "apps/twitch",
      "entryFile": "main",
      "sourceRoot": "apps/twitch/src",
      "compilerOptions": {
        "tsConfigPath": "apps/twitch/tsconfig.app.json"
      }
    },
    "shared": {
      "type": "library",
      "root": "libs/shared",
      "entryFile": "index",
      "sourceRoot": "libs/shared/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared/tsconfig.lib.json"
      }
    }
  }
}